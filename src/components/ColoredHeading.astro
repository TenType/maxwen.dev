---
interface Props {
  color: string;
  level: 1 | 2 | 3 | 4 | 5 | 6;
}
const { color, level } = Astro.props;
const Tag = `h${level}` as "h1" | "h2" | "h3" | "h4" | "h5" | "h6";
---

<Tag class="colored-heading" style={`--border-color: ${color}`}>
  <slot />
</Tag>

<style>
  .colored-heading {
    border-left: 8px solid var(--border-color);
    padding-left: 10px;
  }
</style>
